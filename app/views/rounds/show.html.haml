- content_for :title, @round.name

%script{ :type => "text/javascript" }
  ! user = #{ current_user.to_json }
  channel = '#{ @round.chat_id }';
  thread = '#{ @round.class }';

= javascript_include_tag "#{node_host}/socket.io/socket.io.js"
= javascript_include_tag :defaults
= javascript_include_tag "socket-users"
= javascript_include_tag "chat"
= javascript_include_tag "round"
= javascript_include_tag "workspace"

= render :partial => 'templates'
= render :partial => 'workspace/templates'

#mainpage
  = render :partial => "welcome/login"

#round{ :"ng-controller" => "roundController", :"ng-show" => "visible" }
  #info{ :"ng-show" => "!round.editing", :"ng-include" => "'round_info'" }
  #edit{ :"ng-show" => "round.editing", :"ng-include" => "'round_edit'" }

  %a{ :"ng-click" => "add_workspace()", :"ng-show" => "!adding_workspace" } New workspace
  #workspace_bar{ :"ng-show" => "adding_workspace", :"ng-include" => "'workspace_bar'" }
  #workspaces
    .workspace{ :"ng-repeat" => "workspace in round.workspaces", :"ng-include" => "workspace.workspace_type", :"ng-show" => "workspace.priority != 'Hidden'" }

= render :partial => 'chats/window'

