<%= javascript_include_tag :defaults %>

<div class="loginbox">
  <p>Who are you?</p>
  <%= form_tag welcome_path, :class => 'iform', :id => 'login_form', :autocomplete => 'off' do %>
    <%= select :user, :login, 
      User.list,
      {:prompt => 'Please select'},
      {:'data-change-submit' => 'login_form'} %>
    <p>or</p>
    <%= link_to 'sign up', { :action => 'new', :controller => 'users' }, :target => '_blank' %>
  <% end %>
</div>
