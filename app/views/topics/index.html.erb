<%= render :partial => "welcome/login" %>

<h1>Listing topics</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%=h topic.name %></td>
    <td><%= link_to 'Show', topic_path(topic.name) %></td>
    <!-- <td><%= link_to 'Edit', edit_topic_path(topic.name) %></td> -->
    <td><%= link_to 'Destroy', topic_path(topic.name), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New topic', new_topic_path %>
