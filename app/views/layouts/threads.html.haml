!!! XML
%html{ :xmlns => "http://www.w3.org/1999/xhtml",  :"xml:lang" => "en", :lang => "en", :"ng-app" => "puztubeApp" }
%head
  %meta{ :"http-equiv" => "content-type", :content => "text/html;charset=UTF-8" }
  %title= yield :title
  = stylesheet_link_tag 'application'
  = stylesheet_link_tag 'ts_blue/style'
  = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/angularjs/1.2.8/angular.min.js'
  = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/angularjs/1.2.8/angular-resource.min.js'
  = javascript_include_tag 'ui-utils.min.js'
  = javascript_include_tag 'angular-ui-utils.min.js'
  %link{ :rel => "icon", :type => "image/png", :href => "http://#{hostname}/favicon.png" }
%body
  %p{ :style => "color: green"}= flash[:notice]
  = yield
