<div class="prio<%= workspace.priority %>_title rounded_<%= workspace.priority == "Useless" ? "box": "title" %>">
  <div style="padding:2px; float:left;">
    [<%= link_to_remote 'Edit', :url => edit_workspace_path(:id => workspace.id), :method => 'get', :update => workspace.div_id %> ]
    <% if current_user && current_user.team_captain %>
    [<%= link_to_remote 'Destroy', :url => delete_workspace_path(:id => workspace.id), :confirm => "Are you sure?", :method => :delete %> ]
    <% end %>
    <b> <%= h workspace.title %> </b>
  </div>
  <div style="float:right">
    <% form_remote_for workspace, :url => prioritize_workspace_path(:id => workspace.id), :html => { :class => 'iform', :id => workspace.div_id + '.prio', :autocomplete => 'off' } do %>
      <%= select :workspace, :priority, options_for_select(Workspace.priorities,workspace.priority),{ :id => workspace.div_id + '.priobox' }, {:onchange => "$('#{workspace.div_id}.prio').onsubmit()"} %>
    <% end %>
  </div>
</div>
<% if workspace.priority != "Useless" %>
<div class="prio<%= workspace.priority %>_body rounded_content">
<div id="<%= workspace.div_id %>.content" style="padding: 4px;">
    <%= comment_format workspace.content || '<br>' %>
</div>
<div id="<%= workspace.div_id %>.assets">
  <% workspace.assets.each do |asset| %>
    <%= render :partial => 'workspace/asset', :locals => { :asset => asset } %>
  <% end %>
</div>
<div class="prio<%= workspace.priority %>_body " style="padding:2px;">
<div id="<%= workspace.div_id %>.addbutton">
<%= link_to_function 'Attach file', "javascript: showUpload('#{workspace.div_id}')" %>
</div>
<div id="<%= workspace.div_id %>.cancelbutton" class="prio<%= workspace.priority %>_body hidden">
<%= link_to_function 'Cancel attachment', "javascript: hideUpload('#{workspace.div_id}')" %>
</div>
<div id="<%= workspace.div_id %>.upload" class="prio<%= workspace.priority %>_body hidden">
<% form_for :asset, :url => new_attachment_path(:id => workspace.id), :html => { :multipart => true, :target => workspace.div_id+".upload_frame" } do |f| %>
      <%= f.file_field :file %> <%= f.submit 'Upload' %>
<% end %>
<iframe id="<%= workspace.div_id %>.upload_frame" name="<%= workspace.div_id %>.upload_frame" style="display: none"></iframe>
</div>
</div>
</div>
<%end%>
